<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <ImageButton
                android:id="@+id/rightButton"
                android:layout_width="90dp"
                android:layout_height="79dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="-5dp" />

            <ImageButton
                android:id="@+id/downButton"
                android:layout_width="90dp"
                android:layout_height="79dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:layout_marginBottom="-5dp"/>

            <ImageButton
                android:id="@+id/leftButton"
                android:layout_width="90dp"
                android:layout_height="79dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginEnd="181dp"
                android:layout_marginRight="181dp"
                android:layout_marginBottom="-5dp"
                android:scaleType="fitCenter"
                android:src="?attr/homeAsUpIndicator" />

            <TextView
                android:id="@+id/textViewPunkte"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/textViewPunkte2"
                android:layout_toLeftOf="@+id/textViewPunkte2"
                android:text="Points:"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewPunkte"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="182dp"
                android:text="Level:"
                android:layout_alignLeft="@+id/textViewPunkte" />

            <ImageButton
                android:id="@+id/rotateButton"
                android:layout_width="90dp"
                android:layout_height="79dp"
                android:layout_above="@+id/downButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="95dp"
                android:layout_marginRight="95dp"
                android:layout_marginBottom="13dp"
                android:background="#81D4FA"
                android:scaleType="fitCenter"
                android:src="@android:drawable/stat_notify_sync_noanim" />

            <TextView
                android:id="@+id/textViewPunkte2"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/levelText2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewPunkte"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="63dp"
                android:layout_marginBottom="182dp"
                android:layout_marginLeft="63dp"
                android:layout_alignLeft="@+id/textViewPunkte" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#423F3F">

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>